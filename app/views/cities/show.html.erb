<div class="container mt-4">
  <div class="card mx-auto" style="max-width: 600px;">
    <div class="card-header text-center bg-primary text-white">
      <h2 class="mb-0"><%= @city.city_name %></h2>
    </div>
    <div class="card-body">
      <p class="text-center"><strong>Code postal:</strong> <%= @city.postal_code %></p>

      <hr>

      <h3 class="mb-3">Gossips de la ville</h3>
      <% if @city.gossips.any? %>
        <%= render 'shared/gossips_list', gossips: @city.gossips %>
      <% else %>
        <p class="text-muted">Aucun gossip trouvé pour cette ville.</p>
      <% end %>
    </div>
  </div>
  <div class="text-center mt-4">
    <%= link_to 'Retour à la liste des gossips', gossips_path, class: 'btn btn-secondary' %>
  </div>
</div>